{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "ninq-typings",
        "forceConsistentCasingInFileNames": true,
        "listFiles": true,
        "moduleResolution": "node",
        "newLine": "LF",

        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "dist",
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        ".vscode",
        "ninq-typings"
    ]
}